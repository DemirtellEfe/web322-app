
<h1>Item Details</h1>

<% if (item) { %>
    <h2><%= item.title %></h2>
    <p>Category: <%= item.category %></p>
    <p>Published: <%= item.published ? "Yes" : "No" %></p>
    <p>Post Date: <%= item.postDate %></p>
    <% if (item.featureImage && item.featureImage.trim() !== "") { %>
        <img src="<%= item.featureImage %>" alt="Item Image" width="200">
    <% } else { %>
        <p>No Image Available</p>
    <% } %>
    
<% } else { %>
    <p>Item not found.</p>
<% } %>
</body>
</html>