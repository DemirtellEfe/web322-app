<h1>Add New Item</h1>
<form action="/items/add" method="POST" enctype="multipart/form-data">
    <label>Title:</label>
    <input type="text" name="title" required><br><br>

    <label>Category:</label>
    <select name="category" required>
    <% categories.forEach(cat => { %>
        <option value="<%= cat.id %>"><%= cat.category %></option>
    <% }); %>
    </select><br><br>

    <label>Feature Image:</label>
    <input type="file" name="featureImage"><br><br>

    <label>Published:</label>
    <input type="checkbox" name="published"><br><br>

    <div class="form-group">
        <label for="price">Price:</label>
        <input type="number" step="0.01" name="price" id="price" class="form-control" placeholder="e.g. 59.99">
      </div>
   
    <label>Post Date:</label>
    <input type="date" name="postDate" required><br><br>

    <button type="submit">Add Item</button>
</form>
